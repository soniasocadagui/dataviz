{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "name": "table",
    "url": "https://raw.githubusercontent.com/soniasocadagui/dataviz/main/WBL_DataViz.json"
  },
  "transform": [
    {
      "aggregate": [{"op": "mean", "field": "wbl_index", "as": "mean_index"}],
      "groupby": ["reportyr", "region"]
    }
  ],
  "width": 600,
  "height": 420,
  "layer": [
    {
      "encoding": {
        "x": {"field": "reportyr", "type": "ordinal", "title": "year"},
        "y": {
          "field": "mean_index",
          "type": "quantitative",
          "title": "Avg WBL Index"
        },
        "color": {
          "field": "region",
          "type": "nominal",
          "sort": [
            "High income: OECD",
            "Europe & Central Asia",
            "Latin America & Caribbean",
            "East Asia & Pacific",
            "Sub-Saharan Africa",
            "South Asia",
            "Middle East & North Africa"
          ]
        }
      },
      "layer": [
        {"mark": {"type": "line"}},
        {
          "params": [
            {
              "name": "label",
              "select": {
                "type": "point",
                "encodings": ["x"],
                "nearest": true,
                "on": "mouseover"
              }
            }
          ],
          "mark": "point",
          "encoding": {
            "opacity": {
              "condition": {"param": "label", "empty": false, "value": 1},
              "value": 0
            }
          }
        }
      ]
    },
    {
      "transform": [{"filter": {"param": "label", "empty": false}}],
      "layer": [
        {
          "mark": {"type": "rule", "color": "gray"},
          "encoding": {"x": {"type": "ordinal", "field": "reportyr"}}
        },
        {
          "encoding": {
            "text": {
              "type": "quantitative",
              "field": "mean_index",
              "format": ".1f"
            },
            "x": {"type": "ordinal", "field": "reportyr"},
            "y": {"type": "quantitative", "field": "mean_index"}
          },
          "layer": [
            {
              "mark": {
                "type": "text",
                "stroke": "white",
                "strokeWidth": 2,
                "align": "left",
                "dx": 5,
                "dy": -5
              }
            },
            {
              "mark": {"type": "text", "align": "left", "dx": 5, "dy": -5},
              "encoding": {
                "color": {
                  "type": "nominal",
                  "field": "region",
                  "title": "Region",
                  "sort": [
                    "High income: OECD",
                    "Europe & Central Asia",
                    "Latin America & Caribbean",
                    "East Asia & Pacific",
                    "Sub-Saharan Africa",
                    "South Asia",
                    "Middle East & North Africa"
                  ]
                }
              }
            }
          ]
        }
      ]
    }
  ],
  "config": {}
}